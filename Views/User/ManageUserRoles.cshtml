@model List<Mtama.Models.UserRoleViewModel>

@{
    var userId = ViewBag.userId;
    ViewData["Title"] = "Manage User Role";
}

<form method="post">
    <div class="card col-lg-12 col-md-12 col-sm-12">
        <div class="card col-lg-2 col-md-2 col-sm-2">

            <div class="card-header">
            </div>
        </div>
        <div class="card col-lg-10 col-md-10 col-sm-10">
            <h3>Change User Role</h3>
            <br />
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="from-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="from-check-input" style="height:20px;width:20px" />
                        <label class="from-check-lable" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                    </div>

                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                <a asp-action="ViewUsers" asp-route-id="@userId" class="btn btn-primary" style="width:auto">Cancel</a>
            </div>
        </div>
    </div>


</form>
